@model IEnumerable<Rent_a_Car.Models.Car>
@{
    ViewData["Title"] = "Index";
}

<h1>Cars</h1>

<p>
    <a class="btn btn-outline-primary" asp-action="Create">
        Add Car
    </a>
</p>

<div class="text-center">
    @foreach (var item in Model)
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <div class="col">
            <div class="card h-100">
                <div>
                        <img class="card-img-top" style="height: 200px; object-fit: cover;" src="@Html.DisplayFor(modelItem => item.Photo)"> 
                </div>
                <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.Brand) @Html.DisplayFor(modelItem => item.Model) @Html.DisplayFor(modelItem => item.Year)</h5>
                        <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                </div>
                <div class="card-footer" style="background-color: #4CBB17;">
                        <small class="text-body-secondary">Rent for @Html.DisplayFor(modelItem =>item.Price)$</small>
                        <a asp-action="Edit" class="btn btn-outline-primary" asp-route-id="@item.Id">
                            <i class="fa-solid fa-pen-to-square"></i>  Edit
                        </a>

                        <a asp-action="Details" class="btn btn-outline-primary" asp-route-id="@item.Id">
                            <i class="fa-solid fa-info"></i>  Details
                        </a>

                        <a asp-action="Delete" class="btn btn-outline-primary" asp-route-id="@item.Id">
                            <i class="fa-solid fa-trash"></i> Delete
                        </a>
                </div>
            </div>
        </div>
    </div>
    }
</div>
